@{
    ViewData["Title"] = "List of Producers";
}
@model IEnumerable<Producer>

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>
                        <label>Profile Picture</label>
                    </th>
                    <th>
                        <label>Full Name</label>
                    </th>
                    <th>
                        <label>Email</label>
                    </th>
                    <th>
                        <label>Actions</label>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var producer in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@producer.ProfilePictureURL" alt="@producer.FullName"
                                style="max-width: 150px;">
                        </td>
                        <td class="align-middle">
                            @producer.FullName
                        </td>
                        <td class="align-middle">
                            @producer.Email
                        </td>
                        @* @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                        { *@
                            <td class="align-middle">
                                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@producer.Id"><i
                                        class="bi bi-pencil-square"></i>Edit </a> |
                                <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@producer.Id"><i
                                        class="bi bi-eye"></i>Details </a> |
                                <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@producer.Id"><i
                                        class="bi bi-trash"></i>Delete </a>
                            </td>
                        @* } *@
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
