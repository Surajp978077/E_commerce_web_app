<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ecommerce_front_end</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Ecommerce_front_end.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">

</head>


<body>
    <header>
        <nav>
            <div class="navbar navbar-expand-lg bg-body-tertiary fixed-top">
                <div class="container-fluid ">
                    <div class="col-md-6">
                        <a class="btn border-light" data-bs-toggle="offcanvas" href="#offcanvasExample" role="button"
                            aria-controls="offcanvasExample">
                            <i class="menu bi bi-list "></i>

                            <a class="navbar-brand p-3 text-left" asp-controller="Home" asp-action="Index"> Ecommerce
                            </a>
                        </a>
                    </div>

                    @*
                    @if(User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    { *@

                    @* } *@

                    <form class="d-flex" role="search">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-success" type="submit">Search</button>
                    </form>

                    @* <ul class="navbar-nav">
                    @await Component.InvokeAsync("ShoppingCartSummary")
                    </ul> *@

                    @* <partial name="_Identity.cshtml" /> *@
                </div>
            </div>
            <div id="mode" class="toggle  bg-body-tertiary btn btn-outline-secondary  me-md-3 fixed">
                <i class="bi bi-moon-stars"></i>
            </div>
        </nav>
    </header>


    <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="offcanvasExampleLabel" asp-controller="Movies" asp-action="Index">Ecommerce
            </h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link active" aria-current="page" asp-area="" asp-controller="Movies"
                        asp-action="Index">
                        <i class="bi bi-film"></i>Movies</a>
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="bi bi-gear"></i> Management
                    </a>
                    <ul>
                        <li class="nav-item"><a asp-controller="Cinemas" asp-action="Index">
                                <i class="bi bi-camera-reels"></i> Cinemas</a></li>
                        <li><a asp-controller="Categories" asp-action="Index">
                                <i class="bi bi-headset"></i> Category</a></li>
                        <li><a asp-controller="Actors" asp-action="Index">
                                <i class="bi bi-person-square"></i> Actors</a></li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>


    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>

    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Ecommerce
        </div>
    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
        crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>